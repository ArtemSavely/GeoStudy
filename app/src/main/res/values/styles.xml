<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyText" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@fonts/Rubik</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MyText</item>
        <item name="android:elevation">8dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="MyOutlinedButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MyText</item>
        <item name="android:elevation">8dp</item>
        <item name="android:strokeColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ShadowedAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/finish_alert_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>