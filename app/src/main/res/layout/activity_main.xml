    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/earth_layout"
        android:gravity="end"
        android:layout_marginTop="-60dp"
        android:translationX="100dp"
        android:layout_marginEnd="-60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:src="@drawable/earth" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/earth_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="-30dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/MyText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="Добро\nпожаловать\nв GeoStudy"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/world_button"
            style="@style/MyButton"
            android:background="@drawable/button_background"
            android:text="@string/world"
            android:layout_marginBottom="-10dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/europe_button"
            style="@style/MyButton"
            android:background="@drawable/button_background"
            android:text="Европа"
            android:layout_marginBottom="-10dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/africa_button"
            style="@style/MyButton"
            android:background="@drawable/button_background"
            android:text="Африка"
            android:layout_marginBottom="-10dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/america_button"
            style="@style/MyButton"
            android:background="@drawable/button_background"
            android:text="Америка"
            android:layout_marginBottom="-10dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/asia_button"
            style="@style/MyButton"
            android:background="@drawable/button_background"
            android:text="Азия"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"/>




    </LinearLayout>

