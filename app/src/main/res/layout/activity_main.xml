<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/dark_blue"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/earth_layout"
            android:gravity="end"
            android:layout_marginTop="-60dp"
            android:translationX="100dp"
            android:layout_marginEnd="-60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="370dp"
                android:id="@+id/globe"
                android:src="@drawable/earth" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/earth_layout"
            android:id="@+id/greet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/MyText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                 android:text="@string/welcome_to_geostudy"
                android:textSize="35sp"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/greet_layout"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/world_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/world"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/world_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/europe_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/europe"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/europe_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/africa_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/africa"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/africa_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/america_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/america"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/america_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/asia_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asia"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/asia_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/oceania_button"
                    android:clickable="true"
                    android:background="@drawable/button_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/oceania"
                        android:textSize="24sp"
                        style="@style/MyText"
                        android:layout_gravity="start|top"/>
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/oceania_button_icon"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
